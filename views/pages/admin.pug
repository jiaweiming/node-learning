extends ../layout

block content
    .container
        h2 #{title}
        .row
            form.form-horizontal(method="post", action="/admin/movie/new")
                input(type="hidden", name="movie[_id]", value="#{movie._id}")
                .form-group
                    label.col-sm-6.control-label(for="inputTitle") 电影名字
                    .col-sm-10
                        input#inputTitle.form-contol(type="text", name="movie[title]")
                .form-group
                    label.col-sm-6.control-label(for="inputDoctor") 电影导演
                    .col-sm-10
                        input#inputDoctor.form-contol(type="text", name="movie[doctor]")
                .form-group
                    label.col-sm-6.control-label(for="inputLanguage") 电影语言
                    .col-sm-10
                        input#inputLanguage.form-contol(type="text", name="movie[language]")
                .form-group
                    .col-sm-offset-2.col-sm-10
                        button.btn.btn-default(type="submit") 录入