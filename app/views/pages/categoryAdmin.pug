extends ../layout

block content
    .container
        .row
            form.form-horizontal.col-md-12(method="post", action="/admin/category")
                .form-group
                    label.col-sm-12.control-label(for="inputCategory") Category
                    .col-sm-12
                        input#inputCategory.form-contol.col-md-12(type="text", name="category[name]", required)
                .form-group
                    .col-sm-offset-2.col-sm-12
                        button.btn.btn-primary.col-md-12.btn-lg(type="submit") SUBMIT